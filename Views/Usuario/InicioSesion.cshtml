@model MVCBasico.Models.Usuario

@{
    ViewData["Title"] = "";
}


<div class="text5 row justify-content-center">
<h4>Iniciar Sesion como usuario</h4>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="IniciarSesion">

            <div class="form-group row justify-content-center">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="Contrasenia" class="control-label"></label>
                <input asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <input type="submit" value="Iniciar Sesion" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <script src="Validacion.js"></script>
</div>



<br />
