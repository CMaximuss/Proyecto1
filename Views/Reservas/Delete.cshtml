@model MVCBasico.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}
<div class="texto row justify-content-center">
    <h2>Cancelar</h2>
</div>
<div class="texto2 row justify-content-center">
    <h3>Seguro que quiere cancelar la reserva?</h3>
</div>


<div>

    <hr />
    <div class="form-delate row justify-content-center">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comercio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comercio.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comercio.Direccion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comercio.Direccion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Mail)
            </dd>
        </dl>
    </div>

    <div class="cancelar row justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Cancelar" class="btn btn-danger" />
        </form>
    </div>
</div>

