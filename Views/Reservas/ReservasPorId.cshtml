@model IEnumerable<MVCBasico.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

<h1>Mis Reservas</h1>

<p>
    <a asp-action="Create">
        <input type="submit" value="Reservar" class="btn btn-primary" />
    </a>
    &nbsp
    <a asp-area="" asp-controller="Home" asp-action="Index">
        <input type="submit" value="Cerrar Sesion" class="btn btn-danger" />
    </a>
</p>
<table class="table table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comercio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comercio.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comercio.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comercio.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Mail)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <input type="submit" value="Editar" class="btn btn-primary"/>
                    </a> 
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <input type="submit" value="Detalle" class="btn btn-primary" />
                    </a> 
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <input type="submit" value="Cancelar" class="btn btn-danger" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


